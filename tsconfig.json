{
  "compilerOptions": {
    "baseUrl": "./source",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false,
    "strictNullChecks": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./source/matter.d.ts"
    ],
    "paths": {
      "*": [
        "*",
        "./types/*"
      ]
    },
    "outDir": "./build"
  },
  "exclude": [
    "node_modules"
  ]
}